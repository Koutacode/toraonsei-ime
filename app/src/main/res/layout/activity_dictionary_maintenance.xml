<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="辞書メンテナンス"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ワンタップで全辞書ソース（拡張SKK + 日本郵便）を一括更新します"
            android:textColor="#334155" />

        <TextView
            android:id="@+id/maintenanceStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="待機中"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/maintenanceDetailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="最終更新: なし"
            android:textColor="#334155" />

        <Button
            android:id="@+id/runDictionaryUpdateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="全辞書を一括更新（ワンタップ）"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/clearDynamicDictionaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="更新辞書を削除して同梱辞書に戻す"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>
