<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keyboardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/keyboard_bg"
    android:padding="2dp">

    <!-- 1. 候補表示エリア (最上段) - 高さを拡大 -->
    <LinearLayout
        android:id="@+id/candidateRow"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/candidate_bar_bg"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:id="@+id/candidateScroll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/candidateContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </HorizontalScrollView>
    </LinearLayout>

    <!-- 2. 音声入力 & アクションバー -->
    <LinearLayout
        android:id="@+id/recordRow"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/candidateRow">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clipboardPasteButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="0.95"
            android:ellipsize="end"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:maxLines="1"
            android:minWidth="0dp"
            android:text="貼付"
            android:textSize="14sp"
            app:strokeColor="@color/key_stroke"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/micButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1.8"
            android:backgroundTint="@color/primary"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:minWidth="0dp"
            android:text="音声入力"
            android:textColor="@color/on_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/formatContextButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="0.9"
            android:ellipsize="end"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:maxLines="1"
            android:minWidth="0dp"
            android:padding="0dp"
            android:text="変"
            android:textSize="14sp"
            app:strokeColor="@color/key_stroke"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recordRow" />

    <LinearLayout
        android:id="@+id/imeHeightControlRow"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusText">

        <TextView
            android:id="@+id/imeHeightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高さ"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <SeekBar
            android:id="@+id/imeHeightSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:max="47"
            android:progress="22" />

        <TextView
            android:id="@+id/imeHeightValueText"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="100%"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 3. フリックキーボード (常時表示) - 枠組みと文字サイズを強化 -->
    <LinearLayout
        android:id="@+id/manualInputPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imeHeightControlRow">

        <LinearLayout
            android:id="@+id/tenKeyPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

            <!-- 1段目 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="5.6">
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1" android:tag="LANG_PICKER" android:text="切替" android:backgroundTint="@color/key_action_bg" android:textColor="@color/text_primary" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp" android:textSize="14sp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1.2" android:tag="F1" android:text="あ" android:backgroundTint="@color/key_bg" android:textColor="@color/text_primary" android:textSize="24sp" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1.2" android:tag="F2" android:text="か" android:backgroundTint="@color/key_bg" android:textColor="@color/text_primary" android:textSize="24sp" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1.2" android:tag="F3" android:text="さ" android:backgroundTint="@color/key_bg" android:textColor="@color/text_primary" android:textSize="24sp" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp"/>
                <com.google.android.material.button.MaterialButton android:id="@+id/keyBackspaceButton" android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1" android:tag="BACKSPACE" android:text="⌫" android:backgroundTint="@color/key_action_bg" android:textColor="@color/text_primary" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp" android:textSize="20sp"/>
            </LinearLayout>

            <!-- 2段目 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="5.6">
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1" android:tag="CURSOR_LEFT" android:text="‹" android:backgroundTint="@color/key_action_bg" android:textColor="@color/text_primary" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp" android:textSize="20sp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1.2" android:tag="F4" android:text="た" android:backgroundTint="@color/key_bg" android:textColor="@color/text_primary" android:textSize="24sp" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1.2" android:tag="F5" android:text="な" android:backgroundTint="@color/key_bg" android:textColor="@color/text_primary" android:textSize="24sp" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1.2" android:tag="F6" android:text="は" android:backgroundTint="@color/key_bg" android:textColor="@color/text_primary" android:textSize="24sp" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1" android:tag="CURSOR_RIGHT" android:text="›" android:backgroundTint="@color/key_action_bg" android:textColor="@color/text_primary" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp" android:textSize="20sp"/>
            </LinearLayout>

            <!-- 3段目 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="5.6">
                <com.google.android.material.button.MaterialButton android:id="@+id/inputModeButton" android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1" android:tag="MODE_CYCLE" android:text="あa1" android:backgroundTint="@color/key_action_bg" android:textColor="@color/text_primary" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp" android:textSize="14sp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1.2" android:tag="F7" android:text="ま" android:backgroundTint="@color/key_bg" android:textColor="@color/text_primary" android:textSize="24sp" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1.2" android:tag="F8" android:text="や" android:backgroundTint="@color/key_bg" android:textColor="@color/text_primary" android:textSize="24sp" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1.2" android:tag="F9" android:text="ら" android:backgroundTint="@color/key_bg" android:textColor="@color/text_primary" android:textSize="24sp" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1" android:tag="CONVERT" android:text="整形" android:backgroundTint="@color/key_action_bg" android:textColor="@color/text_primary" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp" android:textSize="16sp"/>
            </LinearLayout>

            <!-- 4段目 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="5.6">
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1" android:tag="SPACE" android:text="空白" android:backgroundTint="@color/key_action_bg" android:textColor="@color/text_primary" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp" android:textSize="18sp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1.2" android:tag="SMALL" android:text="小" android:backgroundTint="@color/key_bg" android:textColor="@color/text_primary" android:textSize="24sp" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1.2" android:tag="F0" android:text="わ" android:backgroundTint="@color/key_bg" android:textColor="@color/text_primary" android:textSize="24sp" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1.2" android:tag="FS" android:text="？！" android:backgroundTint="@color/key_bg" android:textColor="@color/text_primary" android:textSize="24sp" android:layout_margin="2dp" style="@style/Widget.Material3.Button.OutlinedButton" app:strokeColor="@color/key_stroke" app:strokeWidth="1dp" app:cornerRadius="8dp"/>
                <com.google.android.material.button.MaterialButton android:layout_width="0dp" android:layout_height="68dp" android:layout_weight="1" android:tag="ENTER" android:text="⏎" android:backgroundTint="@color/primary" android:textColor="@color/on_primary" android:layout_margin="2dp" style="@style/Widget.Material3.Button" app:cornerRadius="8dp" android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 単語登録パネル (オーバーレイ) -->
    <LinearLayout
        android:id="@+id/addWordPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/candidate_bar_bg"
        android:elevation="12dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="単語帳に追加"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addWordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/key_bg"
            android:hint="単語"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/addReadingEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/key_bg"
            android:hint="読み(かな)"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveWordButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="保存"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelWordButton"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="キャンセル"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
