<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keyboardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_keyboard"
    android:padding="8dp">

    <HorizontalScrollView
        android:id="@+id/candidateScroll"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintEnd_toStartOf="@+id/addWordButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/candidateContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <Button
        android:id="@+id/addWordButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:text="+単語"
        android:textAllCaps="false"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/candidateScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/candidateScroll" />

    <Button
        android:id="@+id/micButton"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="押して録音"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/candidateScroll" />

    <Button
        android:id="@+id/modeShortButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:text="短文"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/micButton"
        app:layout_constraintEnd_toStartOf="@+id/modeLongButton"
        app:layout_constraintStart_toEndOf="@+id/micButton"
        app:layout_constraintTop_toTopOf="@+id/micButton" />

    <Button
        android:id="@+id/modeLongButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:text="長文"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/modeShortButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/modeShortButton"
        app:layout_constraintTop_toTopOf="@+id/modeShortButton" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="待機中"
        android:textColor="#D1D5DB"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/micButton" />

    <LinearLayout
        android:id="@+id/manualInputPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#0F172A"
        android:orientation="vertical"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyModeTextButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="キー入力"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/keyModeTenButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="テンキー"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/keyBackspaceButton"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_marginStart="6dp"
                android:text="⌫"
                android:textAllCaps="false"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/textKeyboardPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1" android:tag="q" android:text="q" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="w" android:text="w" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="e" android:text="e" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="r" android:text="r" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="t" android:text="t" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="y" android:text="y" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="u" android:text="u" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="i" android:text="i" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="o" android:text="o" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="p" android:text="p" android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1" android:tag="a" android:text="a" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="s" android:text="s" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="d" android:text="d" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="f" android:text="f" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="g" android:text="g" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="h" android:text="h" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="j" android:text="j" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="k" android:text="k" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="l" android:text="l" android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1" android:tag="z" android:text="z" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="x" android:text="x" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="c" android:text="c" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="v" android:text="v" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="b" android:text="b" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="n" android:text="n" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="m" android:text="m" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="、" android:text="、" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="。" android:text="。" android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="2" android:tag="SPACE" android:text="空白" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="?" android:text="?" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="!" android:text="!" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="36dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="ENTER" android:text="改行" android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tenKeyPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:tag="7" android:text="7" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="8" android:text="8" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="9" android:text="9" android:textAllCaps="false" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:orientation="horizontal">
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:tag="4" android:text="4" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="5" android:text="5" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="6" android:text="6" android:textAllCaps="false" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:orientation="horizontal">
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:tag="1" android:text="1" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="2" android:text="2" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="3" android:text="3" android:textAllCaps="false" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:orientation="horizontal">
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:tag="0" android:text="0" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="." android:text="." android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="-" android:text="-" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="ENTER" android:text="改行" android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/longPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#0F172A"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manualInputPanel">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="プレビュー"
            android:textColor="#E2E8F0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rawPreviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#1E293B"
            android:minHeight="52dp"
            android:padding="6dp"
            android:text=""
            android:textColor="#F8FAFC"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="整形結果"
            android:textColor="#E2E8F0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/formattedPreviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#1E293B"
            android:minHeight="52dp"
            android:padding="6dp"
            android:text=""
            android:textColor="#F8FAFC"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bulletButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="箇条書き(最大10)"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/casualButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="送信用"
                android:textAllCaps="false"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/insertRawButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="そのまま挿入"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/insertFormattedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="整形を挿入"
                android:textAllCaps="false"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addWordPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#0B1220"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/longPanel">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="単語帳に追加"
            android:textColor="#E5E7EB"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addWordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="#1E293B"
            android:hint="単語"
            android:padding="8dp"
            android:textColor="#F9FAFB"
            android:textColorHint="#94A3B8" />

        <EditText
            android:id="@+id/addReadingEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="#1E293B"
            android:hint="読み(かな) 必須"
            android:padding="8dp"
            android:textColor="#F9FAFB"
            android:textColorHint="#94A3B8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveWordButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="保存"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/cancelWordButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="閉じる"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
