<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keyboardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_keyboard"
    android:padding="8dp">

    <HorizontalScrollView
        android:id="@+id/candidateScroll"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintEnd_toStartOf="@+id/addWordButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/candidateContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <Button
        android:id="@+id/addWordButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:text="+単語"
        android:textAllCaps="false"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/candidateScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/candidateScroll" />

    <LinearLayout
        android:id="@+id/recordRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/candidateScroll">

        <Button
            android:id="@+id/micButton"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="2"
            android:text="録音開始"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/formatContextButton"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:text="文面整形"
            android:textAllCaps="false"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="待機中"
        android:textColor="#D1D5DB"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recordRow" />

    <LinearLayout
        android:id="@+id/keyControlRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusText">

        <Button
            android:id="@+id/keyModeTextButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="かなキー"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/keyModeTenButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:text="フリック"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/keyBackspaceButton"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:text="⌫"
            android:textAllCaps="false"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/manualInputPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#0F172A"
        android:orientation="vertical"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyControlRow">

        <LinearLayout
            android:id="@+id/textKeyboardPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:tag="あ" android:text="あ" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="か" android:text="か" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="さ" android:text="さ" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="た" android:text="た" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="な" android:text="な" android:textAllCaps="false" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:orientation="horizontal">
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:tag="は" android:text="は" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="ま" android:text="ま" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="や" android:text="や" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="ら" android:text="ら" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="わ" android:text="わ" android:textAllCaps="false" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:orientation="horizontal">
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:tag="DAKUTEN" android:text="゛" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="HANDAKUTEN" android:text="゜" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="SMALL" android:text="小" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="ん" android:text="ん" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="ー" android:text="ー" android:textAllCaps="false" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:orientation="horizontal">
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:tag="、" android:text="、" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="。" android:text="。" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="2" android:tag="SPACE" android:text="空白" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="40dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="ENTER" android:text="改行" android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tenKeyPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <Button android:layout_width="0dp" android:layout_height="56dp" android:layout_weight="1" android:tag="F1" android:text="あ" android:textAllCaps="false" android:textSize="18sp" />
                <Button android:layout_width="0dp" android:layout_height="56dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="F2" android:text="か" android:textAllCaps="false" android:textSize="18sp" />
                <Button android:layout_width="0dp" android:layout_height="56dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="F3" android:text="さ" android:textAllCaps="false" android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:orientation="horizontal">
                <Button android:layout_width="0dp" android:layout_height="56dp" android:layout_weight="1" android:tag="F4" android:text="た" android:textAllCaps="false" android:textSize="18sp" />
                <Button android:layout_width="0dp" android:layout_height="56dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="F5" android:text="な" android:textAllCaps="false" android:textSize="18sp" />
                <Button android:layout_width="0dp" android:layout_height="56dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="F6" android:text="は" android:textAllCaps="false" android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:orientation="horizontal">
                <Button android:layout_width="0dp" android:layout_height="56dp" android:layout_weight="1" android:tag="F7" android:text="ま" android:textAllCaps="false" android:textSize="18sp" />
                <Button android:layout_width="0dp" android:layout_height="56dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="F8" android:text="や" android:textAllCaps="false" android:textSize="18sp" />
                <Button android:layout_width="0dp" android:layout_height="56dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="F9" android:text="ら" android:textAllCaps="false" android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:orientation="horizontal">
                <Button android:layout_width="0dp" android:layout_height="56dp" android:layout_weight="1" android:tag="F0" android:text="わ" android:textAllCaps="false" android:textSize="18sp" />
                <Button android:layout_width="0dp" android:layout_height="56dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="、" android:text="、" android:textAllCaps="false" android:textSize="18sp" />
                <Button android:layout_width="0dp" android:layout_height="56dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="。" android:text="。" android:textAllCaps="false" android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:orientation="horizontal">
                <Button android:layout_width="0dp" android:layout_height="52dp" android:layout_weight="1" android:tag="DAKUTEN" android:text="゛" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="52dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="HANDAKUTEN" android:text="゜" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="52dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="SMALL" android:text="小" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="52dp" android:layout_marginStart="4dp" android:layout_weight="2" android:tag="SPACE" android:text="空白" android:textAllCaps="false" />
                <Button android:layout_width="0dp" android:layout_height="52dp" android:layout_marginStart="4dp" android:layout_weight="1" android:tag="ENTER" android:text="改行" android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addWordPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#0B1220"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manualInputPanel">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="単語帳に追加"
            android:textColor="#E5E7EB"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addWordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="#1E293B"
            android:hint="単語"
            android:padding="8dp"
            android:textColor="#F9FAFB"
            android:textColorHint="#94A3B8" />

        <EditText
            android:id="@+id/addReadingEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="#1E293B"
            android:hint="読み(かな) 必須"
            android:padding="8dp"
            android:textColor="#F9FAFB"
            android:textColorHint="#94A3B8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveWordButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="保存"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/cancelWordButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="閉じる"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
